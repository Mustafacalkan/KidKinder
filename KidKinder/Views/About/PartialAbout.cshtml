@model List<KidKinder.Entities.About>

<div class="container-fluid py-5">
    <div class="container">

        @foreach (var item in Model)
        {
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <img class="img-fluid rounded mb-5 mb-lg-0"
                         src="@item.AboutBigImageUrl"
                         alt="" />

                </div>
                <div class="col-lg-7">
                    <p class="section-title pr-5">
                        <span class="pr-2">@item.Title</span>
                    </p>
                    <h1 class="mb-4">@item.Header</h1>
                    <p>
                        @item.Description
                    </p>
                    <div class="row pt-2 pb-4">
                        <div class="col-6 col-md-4">
                            <img class="img-fluid rounded" src="@item.SmallImageUrl" alt="" />
                        </div>
                        @Html.Action("AboutListPartial", "About")
                        <a href="" class="btn btn-primary mt-2 py-2 px-4">Daha Fazla Bilgi</a>
                    </div>
                </div>
            </div>
        }
        
    </div>

</div>